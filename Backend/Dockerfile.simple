# Simple Dockerfile - Uses Python base image with pre-built packages

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including build tools for packages that need compilation
RUN apt-get update && apt-get install -y \
    postgresql-client \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages in stages to avoid conflicts
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# Install core packages first
RUN pip install --no-cache-dir \
    fastapi==0.100.0 \
    uvicorn==0.23.0 \
    python-multipart \
    pydantic==1.10.13 \
    python-dotenv

# Install pydantic-settings separately
RUN pip install --no-cache-dir pydantic-settings

# Install other packages
RUN pip install --no-cache-dir \
    openai \
    redis \
    httpx \
    loguru \
    python-dateutil

# Install database packages
RUN pip install --no-cache-dir \
    sqlalchemy \
    psycopg2-binary

# Install Jira package (may need compilation)
RUN pip install --no-cache-dir jira

# Copy application code
COPY ./app /app/app

# Expose port
EXPOSE 8000

# Run the application
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
